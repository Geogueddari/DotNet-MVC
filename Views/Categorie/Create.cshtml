@model Categorie
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
<div asp-validation-summary="All"></div>
<form method="post">
    <div class="mb-3 raw">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 raw">
        <label asp-for="OrdreAffichage"></label>
        <input asp-for="OrdreAffichage" class="form-control" />
        <span asp-validation-for="OrdreAffichage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary form-control">Créer Catégorie</button>
    <a asp-controller="Categorie" asp-action="Index" class="btn btn-outline-secondary form-control">Retour à la liste</a>
</form>

